{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"db:gen": {
			"cache": false,
			"env": ["DATABASE_URL"]
		},
		"build": {
			"dependsOn": ["^build", "db:gen"],
			"outputs": ["dist/**", ".next/**"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
