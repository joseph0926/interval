generator client {
  provider            = "prisma-client"
  output              = "../src/generated/prisma"
  moduleFormat        = "esm"
  importFileExtension = "js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isGuest  Boolean @default(true)
  email    String? @unique
  nickname String?

  enabledModules       String[] @default(["SMOKE"])
  dayAnchorMinutes     Int      @default(240)
  onboardingCompleted  Boolean  @default(false)
  notificationsEnabled Boolean  @default(true)
  dailyReminderEnabled Boolean  @default(false)
  dailyReminderTime    String?

  pauseEvents    PauseEvent[]
  moduleSettings UserModuleSetting[]

  smokingRecords SmokingRecord[]
  delayLogs      DelayLog[]
  badges         UserBadge[]
  intervalEvents IntervalEvent[]

  @@index([email])
}

model PauseEvent {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  urgeType          String
  eventType         String
  pauseDuration     Int?
  result            String?
  triggerSource     String?
  snsAppName        String?
  timestamp         DateTime
  localDayKey       String
  pauseStartEventId String?
  metadata          Json?

  @@index([userId])
  @@index([userId, urgeType])
  @@index([userId, localDayKey])
  @@index([userId, urgeType, localDayKey])
}

model UserModuleSetting {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  moduleType      String
  enabled         Boolean  @default(true)
  defaultDuration Int      @default(90)
  trackedApps     String[] @default([])
  configJson      Json?

  @@unique([userId, moduleType])
  @@index([userId])
}

model SmokingRecord {
  id                   String   @id @default(uuid())
  userId               String
  smokedAt             DateTime
  type                 String
  reasonCode           String?
  reasonText           String?
  coachingMode         String   @default("NONE")
  emotionNote          String?
  intervalFromPrevious Int?
  wasOnTarget          Boolean?
  delayedMinutes       Int      @default(0)
  createdAt            DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, smokedAt])
}

model DelayLog {
  id        String   @id @default(uuid())
  userId    String
  date      String
  minutes   Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
}

model UserBadge {
  id       String   @id @default(uuid())
  userId   String
  type     String
  earnedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@index([userId])
}

model IntervalEvent {
  id             String   @id @default(uuid())
  userId         String
  moduleType     String
  eventType      String
  timestamp      DateTime
  localDayKey    String
  actionKind     String?
  delayMinutes   Int?
  reasonLabel    String?
  triggerContext String?
  payload        Json?
  createdAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, moduleType])
  @@index([userId, moduleType, localDayKey])
  @@index([userId, localDayKey])
}
